@model BookShelf.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Book Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.YearPublished)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YearPublished)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookGenres)
        </dt>
        <dd class="col-sm-10">
            @foreach (var bookGenre in Model.BookGenres)
            {
                <span>
                    @Html.DisplayFor(model => bookGenre.Genre.Description)
                </span>
            }
        </dd>
        <dt class="col-sm-2">Comments</dt>
    </dl>
    @foreach (var item in Model.Comments)
    {

        @Html.DisplayFor(modelItem => item.Text)
        <br />
        <a asp-action="Details" asp-route-id="@item.Id" asp-controller="Comments">Details</a>

                }

            </div>
            <br />
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                <a asp-action="Create" asp-route-id="@Model.Id" asp-controller="Comments">Leave A Comment</a> |
                <a asp-action="Index">Back to List</a>
            </div>

           
